{
  "name": "@sugarshin/renovate-config",
  "version": "4.0.0",
  "description": "My shareable config for Renovate",
  "files": [],
  "scripts": {
    "test": "ava",
    "lint": "eslint *.js",
    "update-pkg-version": "npm --no-git-tag-version version",
    "postupdate-pkg-version": "git add package.json package-lock.json && MESSAGE=$(node -p \"require('./package.json').version\"); git commit -m $MESSAGE",
    "u": "npm run update-pkg-version",
    "u:patch": "npm run u -- patch",
    "u:minor": "npm run u -- minor",
    "u:major": "npm run u -- major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sugarshin/renovate-config.git"
  },
  "keywords": [
    "renovate"
  ],
  "author": "Shingo Sato <shinsugar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sugarshin/renovate-config/issues"
  },
  "homepage": "https://github.com/sugarshin/renovate-config#readme",
  "devDependencies": {
    "ava": "1.4.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-ava": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.7",
    "prettier": "1.17.1",
    "renovate": "14.59.4"
  },
  "renovate-config": {
    "default": {
      "extends": [
        ":separateMajorReleases",
        ":ignoreUnstable",
        ":prNotPending",
        ":renovatePrefix",
        ":semanticPrefixFixDepsChoreOthers",
        ":updateNotScheduled",
        ":ignoreModulesAndTests",
        ":maintainLockFilesDisabled",
        ":autodetectPinVersions",
        ":prHourlyLimitNone",
        ":timezone(Asia/Tokyo)",
        ":label(Renovate)",
        "group:monorepos",
        "group:recommended",
        "helpers:disableTypesNodeMajor"
      ],
      "prConcurrentLimit": 3,
      "dependencies": {
        "extends": [
          ":labels(Renovate, dependencies)"
        ]
      },
      "devDependencies": {
        "extends": [
          ":labels(Renovate, devDependencies)"
        ]
      }
    },
    "js-app": {
      "extends": [
        "@sugarshin",
        "@sugarshin:devDependenciesAutomergeMinor",
        ":pinAllExceptPeerDependencies"
      ],
      "dependencies": {
        "extends": [
          ":automergePatch"
        ]
      }
    },
    "js-lib": {
      "extends": [
        "@sugarshin",
        "@sugarshin:devDependenciesAutomergeMinor",
        ":pinOnlyDevDependencies"
      ]
    },
    "devDependenciesAutomergePatch": {
      "description": "Automerge patch upgrades if they pass tests in devDependencies",
      "devDependencies": {
        "extends": [
          ":automergePatch"
        ]
      }
    },
    "devDependenciesAutomergeMinor": {
      "description": "Automerge minor upgrades if they pass tests in devDependencies",
      "devDependencies": {
        "extends": [
          ":automergeMinor"
        ]
      }
    }
  }
}
