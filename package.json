{
  "name": "@sugarshin/renovate-config",
  "version": "3.0.0",
  "description": "My shareable config for Renovate",
  "files": [],
  "scripts": {
    "test": "ava",
    "lint": "eslint *.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sugarshin/renovate-config.git"
  },
  "keywords": [
    "renovate"
  ],
  "author": "Shingo Sato <shinsugar@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sugarshin/renovate-config/issues"
  },
  "homepage": "https://github.com/sugarshin/renovate-config#readme",
  "devDependencies": {
    "ava": "1.2.1",
    "eslint": "5.15.1",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-ava": "5.1.1",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "renovate": "14.37.0"
  },
  "renovate-config": {
    "default": {
      "extends": [
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":ignoreUnstable",
        ":prNotPending",
        ":renovatePrefix",
        ":semanticPrefixFixDepsChoreOthers",
        ":updateNotScheduled",
        ":ignoreModulesAndTests",
        ":maintainLockFilesDisabled",
        ":autodetectPinVersions",
        ":prHourlyLimit2",
        ":prConcurrentLimit10",
        ":timezone(Asia/Tokyo)",
        "group:monorepos",
        "group:recommended",
        "helpers:disableTypesNodeMajor"
      ],
      "dependencies": {
        "extends": [
          ":labels(Renovate, dependencies)"
        ]
      },
      "devDependencies": {
        "extends": [
          ":labels(Renovate, devDependencies)"
        ]
      }
    },
    "js-app": {
      "extends": [
        "@sugarshin",
        "@sugarshin:devDependenciesAutomergeMinor",
        ":pinAllExceptPeerDependencies"
      ],
      "dependencies": {
        "extends": [
          ":automergePatch"
        ]
      }
    },
    "js-lib": {
      "extends": [
        "@sugarshin",
        "@sugarshin:devDependenciesAutomergeMinor",
        ":pinOnlyDevDependencies"
      ]
    },
    "devDependenciesAutomergePatch": {
      "description": "Automerge patch upgrades if they pass tests in devDependencies",
      "devDependencies": {
        "extends": [
          ":automergePatch"
        ]
      }
    },
    "devDependenciesAutomergeMinor": {
      "description": "Automerge minor upgrades if they pass tests in devDependencies",
      "devDependencies": {
        "extends": [
          ":automergeMinor"
        ]
      }
    }
  }
}
